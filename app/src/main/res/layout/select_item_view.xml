<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_filled_secondary"
        android:padding="@dimen/commons_15dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Font.Bold.Subtitle.White"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Item"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/desc_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/commons_10dp">

            <TextView
                android:id="@+id/desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/Font.Regular.Body.White"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/ward"
                android:layout_marginEnd="@dimen/commons_10dp"
                tools:text="Little description"/>

            <ImageView
                android:id="@+id/ward"
                android:layout_width="@dimen/commons_30dp"
                android:layout_height="@dimen/commons_25dp"
                app:layout_constraintTop_toTopOf="@+id/desc"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="@dimen/commons_05dp"
                android:src="@drawable/ic_downward_white"
                android:contentDescription="@null"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>